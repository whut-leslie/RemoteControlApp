<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<TurnLeftButton@TurnLeftImageButton>
    source: 'Img/image_raspbot_left.png'
<TurnRightButton@TurnRightImageButton>
    source: 'Img/image_raspbot_right.png'
<TurnUpButton@TurnUpImageButton>
    source: 'Img/image_raspbot_up.png'
<TurnDownButton@TurnDownImageButton>
    source: 'Img/image_raspbot_down.png'
<StopButton@StopImageButton>
    source: 'Img/image_raspbot_stop.png'
<ScreenSwitchButton@ScreenSwitchImageButton>
    source: 'Img/screen_switch.png'

<AutoDrivingPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            source:'Img/image_background.jpg'
            size:self.size
            pos:self.pos



    BackButton:
        source: 'Img/back_icon.jpg'
        pos_hint: {"center_x": 0.05, "center_y": 0.96}
        on_press: root.index_slide_button()
    Label:
        text:"\u81EA\u52A8\u9A7E\u9A76"
        font_name:'msyh.ttc'
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.96}
        bold:True
        font_size:30


    FloatLayout:

        BoxLayout:
            pos_hint: {'x': 0, 'y': 0}
            size_hint:0.5,0.9
            orientation:'vertical'
            FloatLayout:

                FloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint:0.8,0.8
                    canvas:
                        Color:
                            rgba:[1,1,1,1]
                        Rectangle:
                            size:self.width,self.height
                            pos:self.pos


        BoxLayout:
            pos_hint: {'x': 0.5, 'y': 0}
            size_hint:0.5,0.9

            FloatLayout:
                StopButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.6}
                TurnUpButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.75}

                TurnDownButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.45}
                TurnLeftButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':0.3,'center_y':.6}
                TurnRightButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':0.7,'center_y':.6}
                ScreenSwitchButton:

                    size_hint:0.2,0.1
                    pos_hint:{'center_x':0.25,'center_y':.2}
                Label:
                    text:'\u81EA\u52A8\u9A7E\u9A76\u5F00\u5173'
                    pos_hint:{'center_x':0.5,'center_y':.2}
                    font_name:'msyh.ttc'
                Switch:
                    id:switch
                    on_active:
                    pos_hint:{'center_x':0.8,'center_y':.2}
                    size_hint:0.2,0.1















