<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<LinePatrolButton@LinePatrolImageButton>
    source: 'Img/line_patrol_mode.png'
<PrisonButton@PrisonImageButton>
    source: 'Img/prison.png'

<LinePatrolPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            source:'Img/image_background.jpg'
            size:self.size
            pos:self.pos



    BackButton:
        source: 'Img/back_icon.jpg'
        pos_hint: {"center_x": 0.05, "center_y": 0.96}
        on_press: root.index_slide_button()
    Label:
        text:"\u5DE1\u7EBF\u6A21\u5F0F"
        font_name:'msyh.ttc'
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.96}
        bold:True
        font_size:30


    FloatLayout:

        BoxLayout:
            pos_hint: {'x': 0, 'y': 0}
            size_hint:0.6,0.9
            orientation:'vertical'
            FloatLayout:

                Label:
                    text:'\u4F20\u611F\u5668\u72B6\u6001\u663E\u793A'
                    font_name:'msyh.ttc'
                    font_size:20
                    pos_hint: {"center_x": 0.5, "center_y": 0.9}

                FloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint:0.8,0.35
                    canvas:
                        Color:
                            rgba:[1,1,1,1]
                        Rectangle:
                            size:self.width,self.height
                            pos:self.pos
                            source:'../../Img/sensor_status_display.png'
                    Image:
                        size_hint: 0.15, 0.3
                        pos_hint: {"center_x": 0.2, "center_y": 0.6}
                        source:'Img/image_raspbot_trackline1.png'
                    Image:
                        size_hint: 0.15, 0.3
                        pos_hint: {"center_x": 0.4, "center_y": 0.6}
                        source:'Img/image_raspbot_trackline1.png'
                    Image:
                        size_hint: 0.15, 0.3
                        pos_hint: {"center_x": 0.6, "center_y": 0.6}
                        source:'Img/image_raspbot_trackline1.png'
                    Image:
                        size_hint: 0.15, 0.3
                        pos_hint: {"center_x": 0.8, "center_y": 0.6}
                        source:'Img/image_raspbot_trackline1.png'
                    Label:
                        text:'S1'
                        color:[0,0,0,1]
                        pos_hint: {"center_x": 0.2, "center_y": 0.3}
                    Label:
                        text:'S2'
                        color:[0,0,0,1]
                        pos_hint: {"center_x": 0.4, "center_y": 0.3}
                    Label:
                        text:'S3'
                        color:[0,0,0,1]
                        pos_hint: {"center_x": 0.6, "center_y": 0.3}
                    Label:
                        text:'S4'
                        color:[0,0,0,1]
                        pos_hint: {"center_x": 0.8, "center_y": 0.3}



        BoxLayout:
            pos_hint: {'x': 0.5, 'y': 0}
            size_hint:0.4,0.9

            FloatLayout:
                LinePatrolButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.6}


                PrisonButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.4}












