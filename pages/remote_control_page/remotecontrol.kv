<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<LeftButton@LeftImageButton>
    source: 'Img/image_raspbot_tleft.png'
<RightButton@RightImageButton>
    source: 'Img/image_raspbot_tright.png'
<TurnLeftButton@TurnLeftImageButton>
    source: 'Img/image_raspbot_left.png'
<TurnRightButton@TurnRightImageButton>
    source: 'Img/image_raspbot_right.png'
<TurnUpButton@TurnUpImageButton>
    source: 'Img/image_raspbot_up.png'
<TurnDownButton@TurnDownImageButton>
    source: 'Img/image_raspbot_down.png'
<StopButton@StopImageButton>
    source: 'Img/image_raspbot_stop.png'
<BuzzerButton@BuzzerImageButton>
    source: 'Img/buzzer_button.png'


<RemoteControlPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            source:'Img/image_background.jpg'
            size:self.size
            pos:self.pos
    BackButton:
        source: 'Img/back_icon.jpg'
        pos_hint: {"center_x": 0.05, "center_y": 0.95}
        on_press: root.index_slide_button()

    Label:
        text:"\u9065\u63A7\u6A21\u5F0F"
        font_name:'msyh.ttc'
        pos_hint: {"center_x": 0.5, "center_y": 0.96}
        bold:True
        font_size:30

    FloatLayout:

        BoxLayout:
            pos_hint: {'x': 0, 'y': 0}
            size_hint:0.28,0.9
            orientation:'vertical'


            FloatLayout:

                Label:
                    text:'\u8D85\u58F0\u6CE2\u8DDD\u79BB:106'
                    font_name:'msyh.ttc'
                    pos_hint: {"center_x": 0.5, "center_y": 0.9}

                Image:
                    source:'Img/rock.png'
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}
                Image:
                    source:'Img/rockmiddle.png'
                    pos_hint: {"center_x": 0.5, "center_y": 0.6}

                LeftButton:
                    size_hint:0.3,0.1
                    pos_hint: {"center_x": 0.3, "center_y": 0.2}


                RightButton:
                    size_hint:0.3,0.1
                    pos_hint: {"center_x": 0.7, "center_y": 0.2}



        BoxLayout:
            pos_hint: {'x': 0.28, 'y': 0}
            size_hint:0.44,0.9
            orientation:'vertical'

            FloatLayout:
                canvas.before:
			        Color:
				        rgba: 1, 1, 1, 1
			        Rectangle:
				        pos: self.pos
				        size: self.size


        BoxLayout:
            orientation:'vertical'
            pos_hint: {'x': 0.72, 'y': 0}
            size_hint:0.28,0.9
            FloatLayout:
                Image:
                    source:'Img/slider.png'
                    pos_hint: {'center_x': 0.1, 'center_y': 0.9}
                    size_hint_y:None

                Slider:
                    orientation:'horizontal'
                    min:0
                    max:50
                    value_track:True
                    value_track_color:[1,0,0,1]
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                    size_hint:0.7,0.9
                Label:
                    text:"50"
                    pos_hint: {'center_x': 0.9, 'center_y': 0.9}


                StopButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.6}
                TurnUpButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.75}

                TurnDownButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':.5,'center_y':.45}
                TurnLeftButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':0.2,'center_y':.6}
                TurnRightButton:
                    text:'1'
                    size_hint:0.2,0.1
                    pos_hint:{'center_x':0.8,'center_y':.6}
                BuzzerButton:
                    size_hint:0.5,0.1
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}




