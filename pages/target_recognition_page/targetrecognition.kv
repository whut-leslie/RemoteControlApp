<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<QRCodeRecognitionButton@QRCodeRecognitionImageButton>
    source: 'Img/QRcode_recognition.png'
<ObjectRecognitionButton@ObjectRecognitionImageButton>
    source: 'Img/object_recognition.png'
<GestureRecognitionButton@GestureRecognitionImageButton>
    source: 'Img/gesture_recognition.png'

<TargetRecognitionPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            source:'Img/image_background.jpg'
            size:self.size
            pos:self.pos



    BackButton:
        source: 'Img/back_icon.jpg'
        pos_hint: {"center_x": 0.05, "center_y": 0.96}
        on_press: root.index_slide_button()
    Label:
        text:"\u76EE\u6807\u8BC6\u522B"
        font_name:'msyh.ttc'
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.96}
        bold:True
        font_size:30


    FloatLayout:

        BoxLayout:
            pos_hint: {'x': 0, 'y': 0}
            size_hint:0.6,0.9
            orientation:'vertical'
            FloatLayout:

                FloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint:0.8,0.8
                    canvas:
                        Color:
                            rgba:[1,1,1,1]
                        Rectangle:
                            size:self.width,self.height
                            pos:self.pos


        BoxLayout:
            pos_hint: {'x': 0.5, 'y': 0}
            size_hint:0.4,0.9

            FloatLayout:
                QRCodeRecognitionButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.7}
                ObjectRecognitionButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.5}
                GestureRecognitionButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.3}














