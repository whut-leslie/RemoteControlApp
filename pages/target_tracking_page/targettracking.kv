<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<FaceTrackingButton@FaceTrackingImageButton>
    source: 'Img/face_tracking.png'
<ColorTrackingButton@ColorTrackingImageButton>
    source: 'Img/color_tracking.png'
<ColorFollowButton@ColorFollowImageButton>
    source: 'Img/color_follow.png'
<RedColorButton@RedColorImageButton>
    source: 'Img/red_color.png'
<GreenColorButton@GreenColorImageButton>
    source: 'Img/green_color.png'
<BlueColorButton@BlueColorImageButton>
    source: 'Img/blue_color.png'
<YellowColorButton@YellowColorImageButton>
    source: 'Img/yellow_color.png'

<TargetTrackingPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            source:'../../Img/image_background.jpg'
            size:self.size
            pos:self.pos



    BackButton:
        source: '../../Img/back_icon.jpg'
        pos_hint: {"center_x": 0.05, "center_y": 0.96}
        on_press: root.index_slide_button()
    Label:
        text:"\u76EE\u6807\u8FFD\u8E2A"
        font_name:'msyh.ttc'
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.96}
        bold:True
        font_size:30


    FloatLayout:

        BoxLayout:
            pos_hint: {'x': 0, 'y': 0}
            size_hint:0.6,0.9
            orientation:'vertical'
            FloatLayout:

                FloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    size_hint:0.8,0.8
                    canvas:
                        Color:
                            rgba:[1,1,1,1]
                        Rectangle:
                            size:self.width,self.height
                            pos:self.pos


        BoxLayout:
            pos_hint: {'x': 0.5, 'y': 0}
            size_hint:0.4,0.9

            FloatLayout:
                FaceTrackingButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.8}
                ColorTrackingButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.65}
                ColorFollowButton:
                    size_hint: 0.6, 0.16
                    pos_hint: {"center_x": 0.6, "center_y": 0.5}

                FloatLayout:
                    pos_hint: {"center_x": 0.6, "center_y": 0.3}
                    size_hint:0.9,0.2
                    canvas:
                        Color:
                            rgba:[0.9,1,1,1]
                        Rectangle:
                            size:self.width,self.height
                            pos:self.pos
                    RedColorButton:
                        size_hint: 0.15, 0.5
                        pos_hint: {"center_x": 0.2, "center_y": 0.5}
                    GreenColorButton:
                        size_hint: 0.15, 0.5
                        pos_hint: {"center_x": 0.4, "center_y": 0.5}
                    BlueColorButton:
                        size_hint: 0.15, 0.5
                        pos_hint: {"center_x": 0.6, "center_y": 0.5}
                    YellowColorButton:
                        size_hint: 0.15, 0.5
                        pos_hint: {"center_x": 0.8, "center_y": 0.5}














