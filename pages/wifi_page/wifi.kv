
<BackButton@BackImageButton>
    size_hint: 0.05, 0.05
<ConnectButton@ConnectImageButton>
    source: 'Img/connect_button.png'



<WifiPage>:
    canvas:
        Color:
            rgba:[1,1,1,1]
        Rectangle:
            size:self.size
            pos:self.pos
            source:'Img/wifi_background.jpg'

    BackButton:
        source: 'Img/back_icon.jpg'
        pos_hint: {"center_x": 0.1, "center_y": 0.9}
        on_press: root.index_slide_button()

    BoxLayout:
        id:wifi_page
        orientation:"vertical"
        BoxLayout:
            Label:
                text:"WiFi Configuration"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                bold:True
                font_size:30

        BoxLayout:
            id:ip_configuration
            Label:
                text: 'Ip:'
                color:[1,1,1,1]
                font_size:30
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "center"
                TextInput:
                    id: ip_input
                    text: '192.168.1.68'
                    size_hint_x: .5
                    size_hint_y: None
                    height: '32dp'
                    padding_x: [self.center[0]/6.0 - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached)/6.0, 0]
                    padding_y: [self.height/2.0 - (self.line_height/2.0) * len(self._lines), 0]
        BoxLayout:
            id:port_configuration
            Label:
                text: 'Port:'
                color: (1, 1, 1, 1)
                font_size:30

            AnchorLayout:
                id: me_word_box_anchor
                anchor_x: "left"
                anchor_y: "center"
                TextInput:
                    text: '6000'
                    id: port_input
                    size_hint_x: .5
                    size_hint_y: None
                    height: '32dp'
                    padding_x: [self.center[0]/6.0 - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached)/6.0, 0]
                    padding_y: [self.height/2.0 - (self.line_height/2.0) * len(self._lines), 0]

        BoxLayout:
            id:video_configuration
            Label:
                text: 'Video:'
                color: (1, 1, 1, 1)
                font_size:30

            AnchorLayout:
                id: me_word_box_anchor
                anchor_x: "left"
                anchor_y: "center"
                TextInput:
                    text: '6001'
                    id: video_input
                    size_hint_x: .5
                    size_hint_y: None
                    height: '32dp'
                    padding_x: [self.center[0]/6.0 - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached)/6.0, 0]
                    padding_y: [self.height/2.0 - (self.line_height/2.0) * len(self._lines), 0]
        BoxLayout:
            id:connect_button
            ConnectButton:
                on_press:root.try_connect()




